{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "iam:PassRole",
                "cloudformation:*",
                "glue:*"
            ],
            "Resource": "*",
            "Effect": "Allow"
        },
        {
            "Action": [
                "s3:PutObject",
                "s3:GetBucketPolicy",
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::QA_SCRIPT_BUCKET/*",
                "arn:aws:s3:::QA_SCRIPT_BUCKET",
                "arn:aws:s3:::DEVOPS_CHKOUT_S3",
                "arn:aws:s3:::DEVOPS_CHKOUT_S3/*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "kms:*"
            ],
            "Resource": "DEVOPS_KMS_ARN",
            "Effect": "Allow"
        }
    ]
}